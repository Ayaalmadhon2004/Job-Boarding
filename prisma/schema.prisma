generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id    String @id @default(cuid())
  email String @unique
  name  String?
  jobs  Job[]  @relation("JobOwner")
}

model Job {
  id          String    @id @default(cuid())
  title       String
  description String
  type        String    @default("Web-development")
  ownerId     String?    // nullable مؤقتاً
  owner       User?      @relation("JobOwner", fields: [ownerId], references: [id])
  applications Application[]
}



model Application {
  id         String   @id @default(cuid())
  name       String
  email      String
  message    String?
  skills     String?    // اجعلها nullable مؤقتاً
  jobId      String
  job        Job      @relation(fields: [jobId], references: [id])
  status     String?    // nullable مؤقتاً
  createdAt  DateTime @default(now())
}



